{% extends 'base.html.twig' %}

{% block title %}Listado de proveedores{% endblock %}

{% block body %}
    <div class="container-xl">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-6">
                            <h2>Gestion de <b>Proveedores</b></h2>
                        </div>
                        <div class="col-sm-6">
                            <a href="{{ path('create') }}" class="btn btn-success"><i class="material-icons">&#xE147;</i> <span>Crear nuevo proveedor</span></a>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Correo</th>
                            <th>Tel√©fono de contacto</th>
                            <th>Tipo de proveedor</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for provider in providers %}
                            <tr>
                                <td>{{ provider.name }}</td>
                                <td>{{ provider.email }}</td>
                                <td>{{ provider.contactPhone }}</td>

                                {% if 1 == provider.provider_type_id %}
                                <td>Hotel</td>

                                {% elseif 2 == provider.provider_type_id %}
                                <td>Pista</td>

                                {% else %}
                                <td>Complemento</td>

                                {% endif %}

                                <td>
                                    <a href="{{ path('edit', { id : provider.id}) }}" class="edit"><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
                                    <a href="{{ path('delete', {id : provider.id}) }}" class="delete"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
                                </td>
                            </tr>
                        {% endfor %}
                        
                    </tbody>
                </table>
