{% extends 'base.html.twig' %}

{% block title %}Listado de proveedores{% endblock %}

{% block body %}
    <div class="container-xl">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-6">
                            <h2>Gestion de <b>Proveedores</b></h2>
                        </div>
                        <div class="col-sm-6">
                            <a href="{{path('list')}}" class="btn btn-success"><span>Volver</span></a>
                        </div>
                    </div>
                </div>
                <!-- <form action="{{ path('edit', { 'id' : provider.id })}}" method="POST"> -->
                    {{ form_start(form, {'action' : path('create')} ) }}

                    <div class="modal-header">						
                        <h4 class="modal-title">Edita proveedor</h4>
                    </div>
                    <div class="modal-body">					
                        <div class="form-group">
                            <label>Nombre</label>
                            {{ form_row(form.name) }}

                            <input type="text" name="name" value="{{ provider.name }}" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Correo electr√≥nico</label>
                            <input type="email" name="email" value="{{ provider.email }}" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Telefono de contacto</label>
                            <input type="text" name="contact_phone" value="{{ provider.contactPhone }}" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Tipo de proveedor</label>
                            <select class="form-control" name="provider_type_id" id="" >
                                <!-- {% for providerType in providerTypes %}
                                    {% if providerType == provider.provider_type_id %}
                                        <option value="{{providerType.id}}" selected>{{providerType.name}}</option>

                                    {% else %} 
                                        <option value="{{providerType.id}}" >{{providerType.name}}</option>
                                    
                                    {% endif %}

                                {% endfor %} -->
                            </select>
                        </div>		
                        <div class="form-group">
                            <label>Activo</label>
                            <select class="form-control" name="active" id="" >
                                {% if provider.active == 1 %}
                                    <option selected value="1">Si</option>
                                    <option value="0">No</option>
                                {% else %} 
                                    <option value="1">Si</option>
                                    <option selected value="0">No</option>
                                {% endif %}
                               
                            </select>
                        </div>					
                    </div>
                    <div class="modal-footer">
                        <input type="submit" class="btn btn-success" value="Guardar">
                    </div>
                <!-- </form> -->
                {{ form_end(form) }}

            </div>
        </div>        
    </div>
   
{% endblock %}
